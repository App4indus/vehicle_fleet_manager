<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!-- FORM VIEW update vehicle odometer Wizard -->
		<record model="ir.ui.view" id="view_update_odometer_a4i">
			<field name="name">view_update_odometer_a4i</field>
			<field name="model">a4i.vehiclefleetmanager.vehicle.odometer.update</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Manual update - vehicle odometer">
					<group colspan="4" col="4">
						<field name="vehicle_id" readonly="1"/>
						<field name="odometer_value"/>
					</group>

					<footer>
						<button name="update_odometer" string="Update odometer" type="object" class="oe_highlight"/>
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
	</data>

</openerp>